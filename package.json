{
  "name": "@cartino/ui",
  "version": "1.0.0",
  "description": "A Vue 3 UI library with Reka UI and Tailwind Variants for CartinoPHP",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./variants/*": {
      "import": "./dist/variants/*.js",
      "types": "./dist/variants/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "unbuild",
    "build:vite": "vite build",
    "build:check": "vue-tsc && vite build",
    "storybook": "cd storybook && npm run storybook",
    "build-storybook": "cd storybook && npm run build-storybook",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/vue-table": "^8.21.3",
    "@tiptap/pm": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@tiptap/vue-3": "^3.13.0",
    "@vueuse/core": "^14.1.0",
    "motion-v": "^1.7.4",
    "ohash": "^2.0.11",
    "reka-ui": "^2.6.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "vaul-vue": "^0.4.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.22",
    "mkdist": "^2.4.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.2.7",
    "vue": "^3.5.25",
    "vue-tsc": "^3.1.8"
  }
}
