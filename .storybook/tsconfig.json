{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "@/themes": ["src/themes/"],
      "@/components": ["src/components/"]
    },
    "noEmit": true
  },
  "include": ["./*.ts", "../src/components/Toaster.vue"]
}
